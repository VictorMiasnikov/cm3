readonly TARGET_OS = "LINUX"

SYSTEM_LD = SYSTEM_CXXC
  & " -Wl,-z,now"
  & " -Wl,-z,origin"
  & " -Bsymbolic"
  & " -Wl,--fatal-warnings"
  & " -Wl,-rpath,\\$ORIGIN"
  & " -Wl,-rpath,\\$ORIGIN/../lib"
  & " -Wl,--warn-common"

include("Unix.common")
include("gnuld.common")

%SYSTEM_LIBS{"ODBC"}        = [ "-lodbc" ]
%SYSTEM_LIBS{"POSTGRES95"} = [ "-L/usr/local/pgsql/lib", "-lpq" ]
